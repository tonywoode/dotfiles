{
  "env": { 
    "es6": true, 
    "node": true,
    "mocha": true
  },
  "parserOptions": {
        "ecmaVersion": 10,
        "sourceType": "module",
        "ecmaFeatures": {
            "jsx": true
        }
  },
  "rules": {
    "max-len": ["error", { 
      "code" : 100,
      "ignoreComments": true,
      "ignoreUrls": true,
      "ignoreStrings": true,
      "ignoreTemplateLiterals": true,
      "ignoreRegExpLiterals": true
      }],
    "brace-style": ["error",
      "1tbs", { 
        "allowSingleLine": true
      }]
  }
}
